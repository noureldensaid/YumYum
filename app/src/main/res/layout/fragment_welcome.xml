<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.WelcomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/logo_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Welcome to YumYum..."
            android:textColor="@color/ghost_white"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/logo_iv"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="140dp"
            android:lineSpacingExtra="3dp"
            android:text="Discover delicious recipes all over the world"
            android:textAlignment="center"
            android:textColor="@color/ghost_white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_started_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="@color/ghost_white"
            android:padding="16dp"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="20sp"
            app:cornerRadius="24dp" />


    </RelativeLayout>

</FrameLayout>